    if (value === "midium") {
      setText("midium")
      setLevel(dataThree)

    }
    else if (value === "hard") {
      setText("hard")
      setLevel(dataFive)
    }
    else {
      setText("easy")
      setLevel(dataOne)

    }


    console.log("text", value)
  }



  const Card = (id, value, check) => {



    console.log("abcc", mapedData);
